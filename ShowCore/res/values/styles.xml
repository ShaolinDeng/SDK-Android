<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SetupWidget" />

    <style name="SetupWidget.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SetupWidget.ContentContainer">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SetupWidget.BottomDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1effffff</item>
    </style>

    <style name="SetupWidget.BottomBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="SetupWidget.BottomButton" />

    <style name="SetupWidget.BottomButton.Back" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_previous_white_32dp</item>
    </style>

    <style name="SetupWidget.BottomButton.Next" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:minWidth">128dp</item>
        <item name="android:backgroundTint">@color/setup_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="SettingsAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="AboutAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
        <item name="android:windowHideAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
    </style>

    <style name="AboutDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/AboutAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

</resources>
